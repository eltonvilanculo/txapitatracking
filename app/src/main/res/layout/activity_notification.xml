<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NotificationActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome" />

    <TextView
        android:id="@+id/notification_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tipo de notificacao" />

    <TextView
        android:id="@+id/notification_walking_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="qualquer coisa" />

    <Button
        android:id="@+id/notification_accept_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accept" />

    <Button
        android:id="@+id/notification_reject_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reject" />
</LinearLayout>