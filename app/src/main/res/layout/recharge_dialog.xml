<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:layout_margin="50dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Mbela Mova"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginStart="15dp"

                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="9001"


                />

        </LinearLayout>

    </LinearLayout>


    <!--Container do numero-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">



        <TextView
            android:id="@+id/dialog_phone_number_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="84 123 3567"
            android:textSize="30dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <!--Fim do container-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira o valor a recarregar na sua conta Mbela"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/valor_a_recarregar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:inputType="phone"
            android:textSize="25dp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MT"
            android:textSize="25sp" />

    </LinearLayout>


    <Button
        android:id="@+id/recharge_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Pagar com m-pesa"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/redraw_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"

        android:background="@drawable/white_red_backgroud"
        android:elevation="0dp"
        android:text="Levantar"
        android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button"
        android:textColor="@color/red_dark" />

</LinearLayout>