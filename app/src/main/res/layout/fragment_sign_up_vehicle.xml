<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".fragment.VehicleSignUpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/vehicle_sign_up_choose_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:id="@+id/vehicle_sign_up_choose_image_big"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/ic_camera_black_24dp" />

            <!-- *******************************Horizontal ScrollView ********************************** -->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="8dp">

                <LinearLayout
                    android:id="@+id/gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

            </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/vehicle_sign_up_driver_licence"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rounded"
                                android:drawablePadding="12dp"
                                android:ems="10"
                                android:fontFamily="sans-serif"
                                android:hint="Numero da Carta"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:padding="8dp"
                                android:textColorHint="#737876" />


                            <ImageView
                                android:id="@+id/vehicle_sign_up_choose_image_small"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/ic_image_black_24dp" />

                        </LinearLayout>




                        <EditText
                            android:id="@+id/vehicle_sign_up_manufacturer"
                            android:layout_width="245dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_rounded"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:hint="Marca"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="#737876" />


                        <EditText
                            android:id="@+id/vehicle_sign_up_model"
                            android:layout_width="245dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edit_rounded"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed"
                            android:hint="Modelo"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="#737876" />
                        <EditText
                            android:id="@+id/vehicle_sign_up_driver_cylinders"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_rounded"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:hint="Numero da Carta"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="#737876" />

                        <EditText
                            android:id="@+id/vehicle_sign_up_color"
                            android:layout_width="245dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edit_rounded"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed"
                            android:hint="Cor"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="#737876" />

                        <EditText
                            android:id="@+id/vehicle_sign_up_licence_plate"
                            android:layout_width="245dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edit_rounded"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:hint="Matricula"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="#737876" />

                        <EditText
                            android:id="@+id/vehicle_sign_up_year"
                            android:layout_width="245dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edit_rounded"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:hint="Ano de fabrico"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="#737876" />

                        <EditText
                            android:id="@+id/vehicle_sign_up_available_seats"
                            android:layout_width="245dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/edit_rounded"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:hint="Lotacao"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="#737876" />
                        <Spinner
                            android:id="@+id/vehicle_sign_up_fuel_type_spinner"
                            android:layout_width="190dp"
                            android:layout_height="45dp"
                            android:autofillHints=""
                            android:layout_marginTop="10dp">

                        </Spinner>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/vehicle_sign_up_submit_btn"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.15"
                android:background="@drawable/design_botao_login"
                android:text="@string/submit"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginStart="0dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>